{
  "name": "nightshift",
  "version": "1.1b",
  "description": "Elden Ring NightReign environment switcher",
  "main": "main.js",
  "scripts": {
    "dev": "cd renderer && npm run dev & electron .",
    "start": "electron .",
    "dist": "cd renderer && npm run build && cd .. && electron-builder"
  },
  "build": {
    "appId": "com.yourname.Nightshift",
    "productName": "NightShift",
    "directories": {
      "output": "release"
    },
    "asarUnpack": [
      "scripts/**/*"
    ],
    "files": [
      "main.js",
      "preload.js",
      "scripts/**/*",
      "assets/**/*",
      "renderer/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "portable",
        "zip"
      ],
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "ini": "^5.0.0",
    "styled-components": "^6.1.18"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  }
}
